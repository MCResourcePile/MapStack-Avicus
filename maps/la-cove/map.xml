<?xml version="1.0" encoding="UTF-8"?>
<map name="La Cove" version="1.1.0">
    <include src="defaults.xml"/>

    <authors>
        <author uuid="d9b4ffbc11d0453aa93f82dc59fca4b6"/>
        <author uuid="0b8f95fa0f404f289fd0b8e243bb6800"/>
    </authors>
    <compasses>
 
       <compass target="enemy"/>

    </compasses>
    <teams>
        <team id="blue" color="blue" min="1" max="12">{colors.blue}</team>
        <team id="yellow" color="yellow" min="1" max="12">{colors.yellow}</team>
        <team id="lime" color="lime" min="1" max="12">{colors.lime}</team>
        <team id="red" color="red" min="1" max="12">{colors.red}</team>
    </teams>
    <zones>
        <zones>
            <zone modify="never" region="everywhere"/>
        </zones>
    </zones>
    <objectives>
        <last-team-standing team="blue"/>
        <last-team-standing team="yellow"/>
        <last-team-standing team="red"/>
        <last-team-standing team="lime"/>
    </objectives>
    <elimination lives="1"/>
    <results>
        <win scenario="objectives">
            <check>
                <time>5m</time>
            </check>
        </win>
    </results>

    <spawns>
    <!-- Spectator spawn -->
        <spawn>
            <regions>
                <point yaw="90">99, 16, -46</point>
            </regions>
        </spawn>
        <spawn team="yellow" loadout="default">
            <regions>
                <point yaw="45">87, 15, -86</point>
            </regions>
        </spawn>
        <spawn team="lime" loadout="default">
            <regions>
                <point yaw="135">87, 15, -6</point>
            </regions>
        </spawn>
        <spawn team="blue" loadout="default">
            <regions>
                <point yaw="-135">7, 15, -6</point>
            </regions>
        </spawn>
        <spawn team="red" loadout="default">
            <regions>
                <point yaw="-45">7, 15, -86</point>
            </regions>
        </spawn>
    </spawns>

    <loadouts>
        <loadout id="default">
            <helmet team-color="true" material="leather helmet"/>
            <chestplate team-color="true" material="leather chestplate"/>
            <leggings material="chainmail leggings"/>
            <boots team-color="true" material="leather boots"/>
            <item slot="0" material="stone sword"/>
            <item slot="1" material="bow"/>
            <item slot="2" material="bread" amount="16"/>
            <item slot="3" material="compass"/>
            <item slot="8" material="arrow" amount="16"/>
        </loadout>
        <loadout id="one-golden-apple">
            <item material="golden apple"/>
        </loadout>
    </loadouts>
    <kills>
        <rewards>
            <reward loadout="one-golden-apple"/>
        </rewards>
    </kills>
    <items>
        <remove-drops>
            <any>
                <material>leather helmet</material>
                <material>leather chestplate</material>
                <material>leather leggings</material>
                <material>leather boots</material>
                <material>bread</material>
                <material>arrow</material>
                <material>compass</material>
                <material>golden apple</material>
            </any>
        </remove-drops>

        <repair-tools>
            <any>
                <material>stone sword</material>
                <material>bow</material>
            </any>
        </repair-tools>
    </items>
</map>
