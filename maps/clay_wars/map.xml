<?xml version="1.0" encoding="UTF-8"?>
<map name="Clay Wars" version="1.1.0">
    <include src="defaults.xml"/>
    <include src="Shared/tutorial.xml" />
 
    <authors>
        <author uuid="48924ea33aad4e16838c368d8d9e0a25"/> <!-- Matic0B -->
    </authors>
    
    <tutorial>
        <step freeze="false" countdown="5s" location="-43, 8, -116" yaw="-179" pitch="27">
            <chat>
                <line>^r • {tutorial.generic.team-spawns}</line>
            </chat>
        </step>
        <step countdown="4s" location="-7, 10, -112" yaw="90" pitch="23">
            <chat>
                <line>^r • {tutorial.dtm.monument-area}</line>
                <line>^r • {tutorial.dtm.monument-objective}</line>
            </chat>
        </step>
    </tutorial>
 
    <teams>
        <team id="purple" color="purple" min="2" max="15">{colors.purple}</team>
        <team id="orange" color="orange" min="2" max="15">{colors.orange}</team>
    </teams>
 
    <spawns>
    <!-- Spectator spawn -->
        <spawn>
            <regions>
                <point yaw="90">38.5, 32, -30.5</point>
            </regions>
        </spawn>
        <!-- Team spawns -->
        <spawn team="purple" loadout="default-purple" yaw="180">
            <regions>
                <point yaw="180">-42.5, 5, 59.5</point>
            </regions>
        </spawn>
        <spawn team="orange" loadout="default-orange" yaw="0">
            <regions>
                <point yaw="0">-42.5, 5, -120.5</point>
            </regions>
        </spawn>
    </spawns>
 
    <objectives>
        <monuments materials="obsidian">
            <monuments owner="purple">
                <monument name="{directions.left}">
                    <region>
                        <block>2, 8, 50</block>
                    </region>
                </monument>
                <monument name="{directions.right}">
                    <region>
                        <block>-88, 8, 50</block>
                    </region>
                </monument>
            </monuments>
            <monuments owner="orange">
                <monument name="{directions.left}">
                    <region>
                        <block>-88, 8, -112</block>
                    </region>
                </monument>
                <monument name="{directions.right}">
                    <region>
                        <block>2, 8, -112</block>
                    </region>
                </monument>
            </monuments>
        </monuments>
    </objectives>
 
    <loadouts>
        <loadout id="default-purple">
            <helmet material="leather helmet" team-color="true"/>
            <chestplate material="gold chestplate" team-color="true"/>
            <leggings material="leather leggings" team-color="true"/>
            <boots material="leather boots" team-color="true"/>           
            <item slot="0" material="iron sword"/>
            <item slot="1" material="bow">
              <enchantment>arrow infinite</enchantment>
            </item>
            <item slot="2" material="diamond pickaxe">
                <enchantment level="2">dig speed</enchantment>
            </item>
            <item slot="3" material="golden apple" amount="3"/>
            <item slot="4" material="stained clay" damage="10" amount="64"/>
            <item slot="5" material="stained glass" damage="10" amount="64"/>
            <item slot="6" material="iron spade"/>
            <item slot="7" material="golden carrot" amount="32"/>
            <item slot="28" material="arrow" amount="1"/>
        </loadout>
        <loadout id="default-orange">
            <helmet material="leather helmet" team-color="true"/>
            <chestplate material="gold chestplate" team-color="true"/>
            <leggings material="leather leggings" team-color="true"/>
            <boots material="leather boots" team-color="true"/>           
            <item slot="0" material="iron sword"/>
            <item slot="1" material="bow">
              <enchantment>arrow infinite</enchantment>
            </item>
            <item slot="2" material="diamond pickaxe">
                <enchantment level="2">dig speed</enchantment>
            </item>
            <item slot="3" material="golden apple" amount="3"/>
            <item slot="4" material="stained clay" damage="1" amount="64"/>
            <item slot="5" material="stained glass" damage="1" amount="64"/>
            <item slot="6" material="iron spade"/>
            <item slot="7" material="golden carrot" amount="32"/>
            <item slot="28" material="arrow" amount="1"/>
        </loadout>
        <loadout id="kill-reward">
            <item material="golden apple"/>
        </loadout>
    </loadouts>

    <kills>
        <rewards>
            <reward loadout="kill-reward" />
        </rewards>
    </kills>
  
    <zones>
        <zone modify="never">
            <region>
                <invert><cuboid min="27, 28, 67" max="-113, 0, -129"/></invert>
            </region>
        </zone>
        <zone modify="never">
            <region>
                <sphere origin="-43, 4, 59" radius="11"/>
            </region>
            <message>{errors.spawn-restricted}</message>
        </zone>
        <zone modify="never">
            <region>
                <sphere origin="-43, 4, -121" radius="11"/>
            </region>
            <message>{errors.spawn-restricted}</message>
        </zone>
    </zones>
 
    <items>
        <remove-drops>
            <any>
                <material>leather helmet</material>
                <material>gold chestplate</material>
                <material>leather leggings</material>
                <material>leather boots</material>
                <material>golden carrot</material>
                <material>stained clay</material>
                <material>stained glass</material>
                <material>bucket</material>
                <material>arrow</material>
                <material>clay</material>                
            </any>
        </remove-drops>
        <repair-tools>
            <any>
                <material>iron sword</material>
                <material>bow</material>
                <material>diamond pickaxe</material>
                <material>iron spade</material>                
            </any>
        </repair-tools>
    </items>
</map>
