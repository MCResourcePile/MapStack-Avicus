<?xml version="1.0" encoding="UTF-8"?>
<map name="Volcano: Turmoil" version="1.0.0">
    <include src="defaults.xml"/>
    <include src="Shared/reward-one-gap.xml"/>
    <include src="Shared/phases-dtc.xml"/>

    <authors>
        <author uuid="378e21a5410240c58847a4be76391239"/> <!-- Hyperscale -->
        <author uuid="bf3319534f9243ee8abc7544b8234936"/> <!-- Oystervice -->
    </authors>

    <teams>
        <team id="cyan" color="cyan" min="2" max="24">{colors.cyan}</team>
        <team id="red" color="red" min="2" max="24">{colors.red}</team>
    </teams>

    <spawns>
        <!-- Spectator spawn -->
        <spawn>
            <regions>
                <point yaw="0">-41, 25, -74</point>
            </regions>
        </spawn>
        <!-- Team spawns -->
        <spawn team="red" loadout="default" yaw="90">
            <regions>
                <point yaw="90">89, 21, -13</point>
            </regions>
        </spawn>
        <spawn team="cyan" loadout="default" yaw="-90">
            <regions>
                <point yaw="-90">-171, 21, -13</point>
            </regions>
        </spawn>
    </spawns>

    <objectives>
        <leakables materials="obsidian" destroyable="true" first-phase="gold">
            <leakables owner="cyan">
                <leakable name="Core" leak-distance="7" repairable="true">
                    <region>
                      <cuboid min="-124, 24, -15" max="-120, 28, -11"/>
                    </region>
                </leakable>
            </leakables>
            <leakables owner="red">
                <leakable name="Core" leak-distance="7" repairable="true">
                    <region>
                        <cuboid min="38, 24, -11" max="42, 28, -15"/>
                    </region>
                </leakable>
            </leakables>
        </leakables>
    </objectives>

    <loadouts>
        <loadout id="default">
            <helmet material="leather helmet" team-color="true"/>
            <chestplate material="leather chestplate" team-color="true"/>
            <leggings material="iron leggings"/>
            <boots material="leather boots" team-color="true"/>
            <item slot="0" material="iron sword"/>
            <item slot="1" material="bow">
               <enchantment>arrow infinite</enchantment>
            </item>
            <item slot="2" material="diamond pickaxe">
                <enchantment level="2">dig speed</enchantment>
            </item>
            <item slot="3" material="iron axe"/>
            <item slot="4" material="golden apple" amount="3"/>
            <item slot="5" material="log" amount="64"/>
            <item slot="6" material="glass" amount="64"/>
            <item slot="7" material="bucket"/>
            <item slot="8" material="bread" amount="48"/>
            <item slot="28" material="arrow" amount="1"/>
        </loadout>
        <loadout id="kill-reward">
           <item material="golden apple"/>
       </loadout>
    </loadouts>
    <kills>
       <rewards>
           <reward loadout="kill-reward"/>
       </rewards>
    </kills>

    <zones>
        <zone modify="never">
            <region>
                <invert>
                    <cuboid min="119, 0, -62" max="-201, 42, 36"/>
                </invert>
            </region>
            <message>{errors.outside-map}</message>
        </zone>
        <zone modify="never">
            <region>
                <cuboid min="-168, 20, -7" max="-173, 27, -19"/>
            </region>
            <enter>
                <team>red</team>
            </enter>
        </zone>
        <zone modify="never">
            <region>
                <cuboid min="86, 20, -19" max="91, 27, -7"/>
            </region>
            <enter>
                <team>cyan</team>
            </enter>
            <message>{errors.spawn-restricted}</message>
        </zone>
    </zones>

    <world>
      <storm>false</storm>
      <weather check="always"/>
    </world>

    <items>
        <remove-drops>
            <any>
                <material>leather helmet</material>
                <material>leather chestplate</material>
                <material>iron leggings</material>
                <material>leather boots</material>
                <material>bread</material>
                <material>bucket</material>
                <material>golden apple</material>
            </any>
        </remove-drops>
        <repair-tools>
            <any>
                <material>iron sword</material>
                <material>bow</material>
                <material>diamond pickaxe</material>
                <material>iron axe</material>
            </any>
        </repair-tools>
    </items>
</map>
