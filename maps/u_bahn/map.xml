<?xml version="1.0"?>
<map name="U-Bahn" version="1.0.0">
    <include src="defaults.xml"/>
    <include src="Shared/reward-one-gap.xml"/>
 
    <authors>
        <author uuid="135737b87f2b4f90aa37ec395c7c6a9b"/>  <!-- ApolloIsFunky -->
        <author uuid="bf3319534f9243ee8abc7544b8234936"/>  <!-- Spidercell -->
    </authors>
 
    <teams>
        <team id="yellow" color="yellow" min="2" max="12">{colors.yellow}</team>
        <team id="red" color="red" min="2" max="12">{colors.red}</team>
    </teams>
 
    <spawns>
        <spawn team="spectators" yaw="-90">
            <regions>
                <circle center="45, 31, -48" radius="1"/>
            </regions>
        </spawn>
        <spawn team="red" loadout="default" respawn-delay="5s" respawn-freeze="true">
            <regions>
                <cuboid look="45, 6, -48" min="84, 6, -101" max="83, 7, -102"/>
                <cuboid look="45, 6, -48" min="98, 7, -87" max="97, 6, -88"/>
                <cuboid look="45, 6, -48" min="-8, 7, -88" max="-7, 6, -87"/>
                <cuboid look="45, 6, -48" min="7, 7, -102" max="6, 6, -101"/>
            </regions>
        </spawn>
        <spawn team="yellow" loadout="default" respawn-delay="5s" respawn-freeze="true">
            <regions>
                <cuboid look="45, 6, -48" min="84, 6, 5" max="83, 7, 6"/>
                <cuboid look="45, 6, -48" min="98, 7, -8" max="97, 6, -9"/>
                <cuboid look="45, 6, -48" min="7, 6, 5" max="6, 7, 6"/>
                <cuboid look="45, 6, -48" min="-8, 7, -9" max="-7, 6, -8"/>
            </regions>
        </spawn>
    </spawns>
    <objectives>
        <hill name="{directions.left}" capture-time="12s" points="1">
            <capture>
                <cylinder base="23, 5, -70" height="2" radius="5"/>
            </capture>
            <progress>
                <cylinder base="23, 2, -70" height="8" radius="5"/>
            </progress>
        </hill>
        <hill name="{directions.center}" capture-time="12s" points="1">
            <capture>
                <cylinder base="45, 5, -48" height="2" radius="5"/>
            </capture>
            <progress>
                <cylinder base="45, 5, -48" height="8" radius="5"/>
            </progress>
        </hill>
        <hill name="{directions.right}" capture-time="12s" points="1">
            <capture>
                <cylinder base="67, 5, -26" height="2" radius="5"/>
            </capture>
            <progress>
                <cylinder base="67, 2, -26" height="8" radius="5"/>
            </progress>
        </hill>

        <scores limit="500">
            <score team="yellow"/>
            <score team="red"/>
        </scores>
    </objectives>
    <results>
      <win scenario="objectives">
        <time>6m</time>
      </win>
    </results>
   
    <loadouts>
        <loadout id="default">
            <effect duration="5s">damage resistance</effect>
            <helmet material="leather helmet" team-color="true"/>
            <chestplate material="leather chestplate" team-color="true"/>
            <leggings material="chainmail leggings"/>
            <boots material="leather boots" team-color="true"/>
            <item slot="0" material="iron sword"/>
            <item slot="1" material="bow"/>
            <item slot="2" material="golden apple" amount="1"/>
            <item slot="7" material="cooked beef" amount="16"/>
            <item slot="8" material="arrow" amount="8"/>
        </loadout>
        <loadout id="four-arrows">
            <item material="arrow" amount="4"/>
        </loadout>
    </loadouts>
    <kills>
        <rewards>
            <reward loadout="four-arrows"/>
        </rewards>
    </kills>
 
    <items>
        <remove-drops>
            <any>
                <material>leather helmet</material>
                <material>leather chestplate</material>
                <material>chainmail leggings</material>
                <material>leather boots</material>
                <material>cooked beef</material>
                <material>arrow</material>
                <material>iron sword</material>
                <material>golden apple</material>
            </any>
        </remove-drops>
        <repair-tools>
            <any>
                <material>iron sword</material>
                <material>bow</material>
            </any>
        </repair-tools>
    </items>
 
    <zones>
        <zone modify="never" region="everywhere">
            <message>{errors.cannot-build-map}</message>
        </zone>
    </zones>
 
    <world>
        <gamerules>
            <doDaylightCycle>true</doDaylightCycle>
            <doTileDrops>false</doTileDrops>
        </gamerules>
    </world>
</map>
